orange = #D6A753
blue = #40597D
light = #f9f7f4

body,h5,h6
  font-family 'Helvetica Neue', sans-serif
  background-color light
  color blue
  font-size 1.3rem
  line-spacing 1.8rem

a,a:visited,a:active,a:hover
  color orange
  text-decoration none

h1,h2,h3,h4
  margin-top 2.5rem
  font-family 'Helvetica Neue', sans-serif
  color blue

td
  margin-top 2.5rem

#main.center
  margin auto
  width 940px

.centered
  text-align center

#main
  border 0.5px solid blue
  border-radius 10px
  padding 24px

img.logo
  width 600px

footer
  height 130px
  border-radius 10px
  padding 12px
  background-color blue
  ul
    list-style-type none
    padding 0
    margin 0

img.gravatar
  float right
  max-height 128px

.icon
  display inline
  color orange
  font-size 3rem
  font-weight 700
  margin-right 10px
